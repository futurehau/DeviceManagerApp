<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_group_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_name"
            android:textColor="@drawable/textColor1"
            />
        <EditText
            android:id="@+id/et_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/textColor1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_desc"
            android:textColor="@drawable/textColor1"
            />
        <EditText
            android:id="@+id/et_group_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/textColor1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_begin"
            android:textColor="@drawable/textColor1"/>
        <EditText
            android:id="@+id/et_ip_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg：192.168.9.1"
            android:textColor="@drawable/textColor1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_end"
            android:textColor="@drawable/textColor1"/>
        <EditText
            android:id="@+id/et_ip_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg：192.168.9.255"
            android:textColor="@drawable/textColor1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_gravity="center_horizontal"
        android:textColor="@drawable/textColor1"/>



</LinearLayout>
